{% extends 'base.html.twig' %}


{% block title %}Professur{% endblock %}

   {% block content %}

   <div class="col-lg-12">
                            <div class="card easion-card">
                                <div class="card-header">
                                    <div class="easion-card-icon">
                                        <i class="fas fa-table"></i>
                                    </div>
                                    <div class="easion-card-title">Liste des Professeurs </div>
                                </div>
                                <div class="card-body ">
                                    <table class="table table-hover table-in-card">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                 <th>Professeur</th>
                                                <th scope="col">Grade</th>
                                                <th scope="col">Module</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                          {% for item in datas %}
                                            <tr>
                                                <th scope="row">{{item.id}}</th>
                                                <td>{{item.nomComplet}}</td>
                                                <td>{{item.grade}}</td>
                                                <td>
                                                   <button type="button" class="btn btn-info btn-sm btn-voir-module"  data-professeur-modules="">
                                                        Voir Module
                                                    </button>
                                                </td>
                                                 <td>
                                                   <a name="" id="" class="btn btn-info btn-sm"   href="{{path('app_classe_save',{id:item.id})}}" role="button">Edit</a>
                                                   <a name="" id="" class="btn btn-danger btn-sm" href="{{path('app_classe_remove',{id:item.id})}}" role="button">Supprimer</a>
                                                 </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                       
       
                                      
                                </div>
                                    <div class="d-flex justify-content-end mr-2">
                                      {{ knp_pagination_render(datas) }}
                                     </div>
                            </div>
                        </div>


 <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Mes Modules</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
