{% extends 'base.html.twig' %}

{% block title %}form{% endblock %}
{%block stylesheets %}
 {{ parent() }}
 <style style="text/css">
        span.invalid-feedback{ 
            width: 400px;
             margin-left: 170px;
            margin-top: 10px; 
        }
</style>
{% endblock %}
   {% block content %}


 {% for message in  app.flashes('message')  %}
          {{message}}  
 {% endfor %}

 <div class="col-lg-12">
     <div class="card mb-2" >
     <div class="card-header d-flex">
           <div class="easion-card-icon ">
               <i class="fas fa-table"></i>
          </div>
           <div class="easion-card-title ">Enregistrement d'un Professeur</div>
            </div>
       <div class="card-body">
  
             {{ form_start(form) }}
             <div class="form-group row">
             
                    <div class="form-group row">
                        <label for="" class="col-form-label col-sm-2">Matricule</label>
                        <div class="col-sm-10">
                        {{ form_widget(form.etudiant.matricule,{"attr":{'readonly': true}}) }}
                        </div>
                        <div class="m-l-error-message">
                        {{ form_errors(form.etudiant.matricule) }}
                        </div>
                    </div>

                    <div class="form-group row">
                    <div class="form-group row">
                  <label for="" class="col-form-label col-sm-2">Email</label>
                 <div class="col-sm-10">
                  {{ form_widget(form.etudiant.email) }}
                </div>
                   <div class="m-l-error-message">
                      {{ form_errors(form.etudiant.email) }}
                  </div>
                  </div>
              
             <div class="form-group row">
                    <div class="form-group row">
              <label for="" class="col-form-label col-sm-2">Nom et Prenom</label>
                 <div class="col-sm-10">
                  {{ form_widget(form.etudiant.nomComplet) }}
                </div>
               <div class="m-l-error-message">
                   {{ form_errors(form.etudiant.nomComplet) }}
                </div>
              </div> 
              <div class="form-group row">
                    <div class="form-group row">
              <label for="" class="col-form-label col-sm-2">Tuteur</label>
                 <div class="col-sm-10">
                  {{ form_widget(form.etudiant.tuteur) }}
                </div>
                   <div class="m-l-error-message">
                   {{ form_errors(form.etudiant.tuteur) }}
                  </div>
                </div 

              
            
            

                <div class="form-group row">
                    <div class="form-group row">
              <label for="" class="col-form-label col-sm-2">Password</label>
                 <div class="col-sm-10">
                  {{ form_widget(form.etudiant.password) }}
                </div>
                   <div class="m-l-error-message">
                   {{ form_errors(form.etudiant.password) }}
                  </div>
                </div>


                      {{ form_row(form.classe) }}
                     {{ form_end(form) }}
            
              </div>
    </div>
</div>
{% endblock %}
